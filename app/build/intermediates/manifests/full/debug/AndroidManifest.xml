<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.sezex.sidebar"
    android:versionCode="2"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.GET_TASKS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/SBTheme" >
        <activity
            android:name="ru.sezex.sidebar.SplashScreen"
            android:excludeFromRecents="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/FullScreenSB" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ru.sezex.sidebar.MainActivity"
            android:excludeFromRecents="true"
            android:label="@string/service" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="ru.sezex.sidebar.adapter.AppListActivity"
            android:excludeFromRecents="true"
            android:label="@string/applist" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <service
            android:name="ru.sezex.sidebar.sidebar.SidebarService"
            android:excludeFromRecents="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:stopWithTask="false" >
        </service>

        <activity
            android:name="ru.sezex.sidebar.FAQActivity"
            android:excludeFromRecents="true"
            android:label="@string/faq" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="ru.sezex.sidebar.DonateActivity"
            android:excludeFromRecents="true"
            android:label="@string/donate" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <receiver android:name="ru.sezex.sidebar.BootReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver android:name="ru.sezex.sidebar.RestartReceiver" >
            <intent-filter>
                <action android:name="ru.sezex.sidebar.START" />
                <action android:name="ru.sezex.sidebar.STOP" />
                <action android:name="ru.sezex.sidebar.TOGGLE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>